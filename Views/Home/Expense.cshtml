
<div class="container">
    <div style="flex-grow: 1;">
        <div style="background-color: brown;">
            <div class="budget-header">
                <div class="balance">
                    <div class="title">
                        Balance
                    </div>
                    <div class="value">
                        <small>$</small>0
                    </div>
                </div>
                <div class="account">
                    <div class="income">
                        <div class="title">
                            Income
                        </div>
                        <div class="income-total">
                            <small>$</small>0
                        </div>
                    </div>
                    <div class="chart"></div>
                    <div class="outcome">
                        <div class="title">
                            Outcome
                        </div>
                        <div class="outcome-total">
                            <small>$</small>0
                        </div>
                    </div>
                </div>
                <div class="date">
                    <span id="datetime" style="color: white; font-size: 20px;"></span>
                    <span id="day" style="color: white; margin-top: 20px; font-size: 20px;"> day</span>

                </div>
                <button class="btn success" id="selectBtn">  Monthly Report</button>


            </div>
        </div>
        <div class="bg-class">
            <div class="chartContainer">
                <canvas id="myChart">
                </canvas>
            </div>


        </div>
    </div>




    <div>
        <div class="budget-dashboard ">
            <div class="dash-title">Dashboard</div>
            <div class="toggle">
                <div class="tab1">Expenses</div>
                <div class="tab2">Income</div>
                <div class="tab3 active">All</div>
            </div>
            <div class="hide" id="income">
                <ul class="list"></ul>
                <div class="input">
                    <input type="text" id="income-title-input" name="title" placeholder="Title">
                    <input type="number" id="income-amount-input" name="amount" placeholder="$0">
                    <div class="add-income"><img src="icon/plus.png" alt=""></div>
                </div>
            </div>
            <div class="hide" id="expense">
                <ul class="list"></ul>
                <div class="input">
                    <input type="text" id="expense-title-input" name="title" placeholder="Title">
                    <input type="number" id="expense-amount-input" name="amount" placeholder="$0">
                    <div class="add-expense"><img src="icon/plus.png" alt=""></div>
                </div>
            </div>
            <div id="all">
                <ul class="list"></ul>
            </div>
        </div>
    </div>






</div>